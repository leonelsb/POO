class Estudiante{
	String nombre;
	int matricula;
	String materia;
	String calificacion;
	String estado;
	
		public Estudiante(String nombre, int matricula, String materia, String calificacion, String estado){
		setNombre(nombre);
		setMatricula(matricula);
		setMateria(materia);
		setCalificacion(calificacion);
		setEstado(estado);
	}
	
	//Los setters sirven para asignar un valor a un campo/atributo
	public void setNombre(String nombre){
		this.nombre = nombre;
	}
	
	public void setMatricula(int matricula){
		this.matricula = matricula;
	}
	
	public void setMateria(String materia){
		this.materia = materia;
	}
	
	public void setCalificacion(String calificacion){
		this.calificacion = calificacion;
	}
	
	public void setEstado(String estado){
		this.estado = estado;
	}
	
	//Los getters sirven para recuperar el valor de un campo/atributo.
	public String getNombre(){
		return nombre;
	}
	
	public int getMatricula(){
		return matricula;
	}
	
	public String getMateria(){
		return materia;
	}
	
	public String getCalificacion(){
		return calificacion;
	}
	
	public String getEstado(){
		return estado;
	}
}

class CapturaEntrada{

    public static int capturarEntero(String msg){
        Scanner sc = new Scanner(System.in);
        System.out.print(""+msg+": ");
        return (sc.nextInt());
    }

    public static float capturarFlotante(String msg){
        Scanner sc = new Scanner(System.in);
        System.out.print(""+msg+": ");
        return (sc.nextFloat());
    }

    public static double capturarDoble(String msg){
        Scanner sc = new Scanner(System.in);
        System.out.print(""+msg+": ");
        return (sc.nextDouble());
    }

    public static String capturarCadena(String msg){
        Scanner sc = new Scanner(System.in);
        System.out.print(""+msg+": ");
        return (sc.nextLine());
    }
	
	public static char capturarCaracter(String msg){
		Scanner sc = new Scanner(System.in);
        System.out.print(""+msg+": ");
        return (sc.next().charAt(0));
	}
}
